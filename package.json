{
  "name": "devlang-cli",
  "description": "A simple parser for a simple language",
  "version": "1.1.91",
  "main": "./out/devlang-cli.js",
  "bin": "./out/devlang-cli.js",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' devlang-cli.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" devlang-cli.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && pizza",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "devDependencies": {
    "@types/clear": "^0.1.2",
    "@types/figlet": "^1.5.5",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.2",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^9.4.1",
    "figlet": "^1.5.2",
    "path": "^0.12.7"
  }
}
